<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".login.LoginActivity">

    <com.tssss.bysj.widget.GTextView
        android:id="@+id/login_account_gtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="@string/tips_input_account"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/font_size_20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <EditText
        android:id="@+id/login_account_et"
        style="@style/GEditText"
        android:layout_marginTop="16dp"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/login_account_gtv"
        app:layout_constraintTop_toBottomOf="@+id/login_account_gtv"
        tools:ignore="Autofill,LabelFor" />

    <com.tssss.bysj.widget.GTextView
        android:id="@+id/login_password_gtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/tips_input_password"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/font_size_20sp"
        app:layout_constraintStart_toStartOf="@+id/login_account_et"
        app:layout_constraintTop_toBottomOf="@+id/login_account_et"
        tools:ignore="ContentDescription" />

    <EditText
        android:id="@+id/login_key_et"
        style="@style/GEditText"
        android:layout_marginTop="16dp"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/login_password_gtv"
        app:layout_constraintTop_toBottomOf="@+id/login_password_gtv"
        tools:ignore="Autofill,LabelFor" />

    <com.tssss.bysj.widget.GTextView
        android:id="@+id/login_login_gtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:text="@string/tips_login"
        android:textColor="@color/green_56ce4d"
        android:textSize="@dimen/font_size_20sp"
        app:layout_constraintStart_toStartOf="@+id/login_key_et"
        app:layout_constraintTop_toBottomOf="@+id/login_key_et"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/login_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_login_gtv"
        app:srcCompat="@drawable/ic_btn_login"
        tools:ignore="ContentDescription" />
</androidx.constraintlayout.widget.ConstraintLayout>
