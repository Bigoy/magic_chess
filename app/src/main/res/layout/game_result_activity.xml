<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_result_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.tssss.bysj.componet.GTextView
                android:id="@+id/game_result_result"
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:gravity="center"
                android:textColor="#4CAF50"
                android:textSize="@dimen/padding_48dp"
                tools:ignore="SpUsage" />

            <com.tssss.bysj.componet.GTextView
                android:id="@+id/game_result_exp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="24dp"
                tools:ignore="SpUsage" />


            <com.tssss.bysj.componet.GTextView
                android:id="@+id/game_result_desc"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp"
                tools:ignore="SpUsage" />

            <com.tssss.bysj.componet.GTextView
                android:id="@+id/game_result_level_desc"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp"
                tools:ignore="SpUsage" />


        </LinearLayout>

    </ScrollView>


    <ImageButton
        android:id="@+id/game_result_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:background="@null"
        android:src="@drawable/ic_btn_i_known" />


</RelativeLayout>
