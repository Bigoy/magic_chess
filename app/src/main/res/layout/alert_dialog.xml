<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_panel"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/dialog_alter_title_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_alter_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="我是标题"
            android:textColor="#2D2D2D"
            android:textSize="25dp"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/dialog_alter_time"
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:gravity="center"
            android:text="2019-04-18"
            android:textColor="#8A8A8A"
            android:textSize="15dp"
            tools:ignore="SpUsage" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/divider" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_alter_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="我是内容啊内容啊内容，么么哒"
            android:textColor="#101010"
            android:textSize="22dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_alter_buttons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

    </LinearLayout>
</LinearLayout>

