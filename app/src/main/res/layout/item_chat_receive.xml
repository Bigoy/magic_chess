<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="24dp">

    <com.tssss.bysj.componet.GTextView
        android:id="@+id/item_chat_receive_time_gtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="2019-01-02"
        android:textSize="@dimen/font_size_14sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />


    <ImageView
        android:id="@+id/item_chat_receive_head_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"

        android:layout_marginTop="@dimen/padding_32dp"
        android:src="@drawable/head_img_test"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_chat_receive_time_gtv"
        tools:ignore="ContentDescription" />

    <com.tssss.bysj.componet.GTextView
        android:id="@+id/item_chat_receive_msg_gtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_chat_msg_blue"
        android:maxWidth="200dp"
        android:paddingStart="@dimen/padding_16dp"
        android:paddingTop="@dimen/padding_8dp"
        android:paddingEnd="@dimen/padding_16dp"
        android:paddingBottom="@dimen/padding_8dp"
        android:singleLine="false"
        android:textColor="#333333"
        android:textSize="@dimen/font_size_20sp"
        app:layout_constraintLeft_toRightOf="@id/item_chat_receive_head_iv"
        app:layout_constraintStart_toEndOf="@+id/item_chat_receive_head_iv"
        app:layout_constraintTop_toTopOf="@+id/item_chat_receive_head_iv"
        tools:ignore="HardcodedText" />
</androidx.constraintlayout.widget.ConstraintLayout>
