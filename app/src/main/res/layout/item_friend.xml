<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00CBFFCD"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/ripe"
        android:id="@+id/item_friend_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:foreground="@drawable/bg_item_avatar"
            android:padding="2dp">

            <ImageView
                android:id="@+id/item_friend_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

        </FrameLayout>


        <com.tssss.bysj.componet.GTextView
            android:id="@+id/item_friend_name"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical"
            android:maxHeight="100dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="22dp"
            tools:ignore="SpUsage" />

        <com.tssss.bysj.componet.GTextView
            android:id="@+id/item_friend_level"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:maxHeight="120dp"
            android:textColor="#494848"
            android:textSize="18dp"
            tools:ignore="RtlHardcoded,SpUsage" />


    </LinearLayout>


