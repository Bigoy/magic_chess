<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".game.setting.AccountActivity">

    <com.tssss.bysj.componet.GTextView
        android:id="@+id/password_now_gtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="@string/setting_psd_now"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/font_size_20sp"
        app:layout_constraintStart_toStartOf="@+id/password_now_et"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <com.tssss.bysj.componet.GTextView
        android:id="@+id/password_now_error_gtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="@string/password_now_error"
        android:textColor="@color/red_9e4b5a"
        android:textSize="@dimen/font_size_20sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/password_now_et"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <EditText
        android:id="@+id/password_now_et"
        style="@style/GEditTextNoBg"
        android:layout_marginTop="116dp"
        android:background="@drawable/category_setting"
        android:inputType="number"
        android:textColor="#2F2F2F"
        android:textColorHint="#2F2F2F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="Autofill,LabelFor,TextFields" />

    <com.tssss.bysj.componet.GTextView
        android:id="@+id/password_new_gtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:text="@string/password_new_hint"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/font_size_20sp"
        app:layout_constraintStart_toStartOf="@+id/password_new_et"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <com.tssss.bysj.componet.GTextView
        android:id="@+id/password__new_error_gtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/password_new_error"
        android:textColor="@color/red_9e4b5a"
        android:textSize="@dimen/font_size_20sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/password_new_et"
        app:layout_constraintTop_toBottomOf="@+id/password_now_et"
        tools:ignore="ContentDescription" />

    <EditText
        android:id="@+id/password_new_et"
        style="@style/GEditTextNoBg"
        android:layout_marginTop="264dp"
        android:background="@drawable/category_setting"
        android:inputType="textPassword"
        android:textColor="#2F2F2F"
        android:textColorHint="#2F2F2F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="Autofill,LabelFor" />

    <FrameLayout
        android:id="@+id/password_alter"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_marginTop="48dp"
        android:paddingStart="64dp"
        android:paddingEnd="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_alter_gtv">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:divider="@drawable/divider_setting"
            android:orientation="vertical"
            android:showDividers="middle">

            <com.tssss.bysj.componet.GTextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="@string/password_alter_comfirm"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="28dp"
                tools:ignore="RtlHardcoded,RtlSymmetry,SpUsage" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/category_setting" />


    </FrameLayout>

    <com.tssss.bysj.componet.GTextView
        android:id="@+id/password_alter_gtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="@string/password_alter"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/password_new_et"
        app:layout_constraintTop_toBottomOf="@+id/password_new_et"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>
