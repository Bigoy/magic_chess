<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_common"
    tools:context=".game.hall.HallActivity">

    <ImageButton
        android:id="@+id/hall_news_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@null"
        android:src="@drawable/ic_btn_news"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/hall_look_friends_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:src="@drawable/ic_btn_friends"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hall_news_ib"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/hall_match_player_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:src="@drawable/ic_btn_match"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hall_look_friends_ib"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/hall_look_people_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:src="@drawable/ic_btn_other_people"
        app:layout_constraintStart_toStartOf="@+id/hall_match_player_ib"
        app:layout_constraintTop_toBottomOf="@+id/hall_match_player_ib"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/hall_look_my_info_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:src="@drawable/ic_btn_me"
        app:layout_constraintEnd_toEndOf="@+id/hall_match_player_ib"
        app:layout_constraintTop_toBottomOf="@+id/hall_match_player_ib"
        tools:ignore="ContentDescription" />
</androidx.constraintlayout.widget.ConstraintLayout>
