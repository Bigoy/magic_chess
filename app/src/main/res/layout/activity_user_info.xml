<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="64dp"
    android:orientation="vertical"
    tools:context=".game.role.UserInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_info_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="32dp"
            android:layout_marginTop="72dp"
            android:background="@drawable/bg_item_avatar"
            android:padding="3dp"
            android:scaleType="fitXY"
            tools:ignore="ContentDescription" />


        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_marginStart="@dimen/padding_16dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <com.tssss.bysj.componet.GTextView
                    android:id="@+id/user_info_sex"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:textColor="#636262"
                    android:textSize="22dp" />


                <com.tssss.bysj.componet.GTextView
                    android:id="@+id/user_info_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:textColor="@color/colorPrimary"
                    android:textSize="24dp" />


            </LinearLayout>


            <com.tssss.bysj.componet.GTextView
                android:id="@+id/user_info_level"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:textColor="#636262"
                android:textSize="18dp" />

            <com.tssss.bysj.componet.GTextView
                android:id="@+id/user_info_exp"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:gravity="bottom"
                android:textColor="#636262"
                android:textSize="14dp" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/user_info_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="@null"
                android:src="@drawable/ic_btn_edit" />

            <com.tssss.bysj.componet.GTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/user_info_edit" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/category_tab"
        android:divider="@drawable/divider"
        android:orientation="horizontal"
        android:showDividers="middle">

        <com.tssss.bysj.componet.GTextView
            android:id="@+id/user_info_signature"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/user_info_signature"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp"
            tools:ignore="RtlHardcoded,RtlSymmetry,SpUsage" />

        <com.tssss.bysj.componet.GTextView
            android:id="@+id/user_info_battle_record"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/user_info_battle_record"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp"
            tools:ignore="SpUsage" />

        <com.tssss.bysj.componet.GTextView
            android:id="@+id/user_info_news"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/user_info_news"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp"
            tools:ignore="SpUsage" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_info_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_weight="1"
        android:orientation="vertical" />

</LinearLayout>

