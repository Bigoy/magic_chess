<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".game.UserInfoActivity">

    <com.tssss.bysj.componet.GTextView
        android:id="@+id/user_info_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:text="出现错误，我们会尽快修复"
        android:textColor="#DDA2A2"
        android:textSize="24dp" />


    <ScrollView
        android:id="@+id/user_info_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/user_info_avatar"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="72dp"
                android:scaleType="fitXY" />


            <com.tssss.bysj.componet.GTextView
                android:id="@+id/user_info_name"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:text="sdfsfdsf"
                android:textColor="@color/colorPrimary"
                android:textSize="24dp" />

            <com.tssss.bysj.componet.GTextView
                android:id="@+id/user_info_sex"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:text="男"
                android:textColor="#636262"
                android:textSize="22dp" />

            <com.tssss.bysj.componet.GTextView
                android:id="@+id/user_info_signature"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:text="sfdsfsdfsfs"
                android:textColor="#636262"
                android:textSize="22dp" />

            <com.tssss.bysj.componet.GTextView
                android:id="@+id/user_info_level"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_item_news"
                android:gravity="center"
                android:padding="16dp"
                android:text="sdf"
                android:textColor="#636262"
                android:textSize="22dp" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>
