<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_news_t_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/padding_8dp"
    android:background="@drawable/bg_item_news">

    <ImageView
        android:id="@+id/item_news_t_head_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/item_news_t_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="#524160"
        android:textSize="@dimen/font_size_24sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintStart_toEndOf="@+id/item_news_t_head_iv"
        app:layout_constraintTop_toTopOf="@+id/item_news_t_head_iv" />

    <TextView
        android:id="@+id/item_news_t_news_tv"
        android:layout_width="@dimen/width_248dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="start"
        android:singleLine="false"
        android:textColor="#282828"
        android:textSize="@dimen/font_size_20sp"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_news_t_name_tv"
        app:layout_constraintTop_toBottomOf="@+id/item_news_t_name_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>
